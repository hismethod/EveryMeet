<RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/kr.ac.kit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:isScrollContainer="true"
    android:orientation="vertical" >

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewHello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="@color/md_indigo_500"
        card_view:cardCornerRadius="6dp" >

        <TextView
            android:id="@+id/helloTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="@string/hello_title"
            android:textColor="@android:color/white"
            android:textSize="25sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardViewHello"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        card_view:cardBackgroundColor="@color/md_pink_500"
        card_view:cardCornerRadius="6dp" >

        <com.rey.material.widget.EditText
            android:id="@+id/initNameCard"
            style="@style/Material.Widget.EditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="40dp"
            android:background="@android:color/transparent"
            android:focusable="true"
            android:gravity="center"
            android:hint="성함을 입력해주세요"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:maxLines="1"
            android:padding="10dp"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            app:et_labelEnable="false"
            app:et_labelPadding="20dp"
            app:et_labelTextColor="@android:color/white"
            app:et_labelTextSize="18sp"
            app:et_supportMaxChars="10"
            app:et_supportMode="charCounter"
            app:et_supportPadding="26dp"
            app:et_supportTextColor="@android:color/white" />
    </android.support.v7.widget.CardView>

</RelativeLayout>